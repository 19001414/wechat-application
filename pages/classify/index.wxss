.nav_left {
	display: block;
	width: 25%;
	height: 100%;
	background: #f5f5f5;
	text-align: center;
}

.nav_left .nav_left_items {
	height: 30px;
	line-height: 30px;
	padding: 6px 0;
	border-bottom: 1px solid #dedede;
	font-size: 14px;
}

.nav_left .nav_left_items.active {
	background: #fff;
}

.nav_right{
	position: absolute;
	top: 0;
	right: 0;
	flex: 1;
	width: 75%;
	min-height: 100%;
	padding: 10px;
	background: #fff;
	box-sizing: border-box;
}

.nav_right .nav_right_items {
	float: left;
	width: 33.33%;
	height: 80px;
	text-align: center;
}

.nav_right .nav_right_items image {
	width: 50px;
	height: 30px;
}

.nav_right .nav_right_items text {
	display: block;
	margin-top: 5px;
	font-size: 10px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
/*分类tab样式*/
.top_tab{
	font-size: 0.75rem;
	text-align: center;
	margin-top: 0.5rem;
	font-weight: bold;
}
.top_tab:first-child{
	border-bottom: 2px solid #E64340;
}
.active{
	border-bottom: 2px solid #E64340;
}
/*首页图片样式*/
.aui-row {
	overflow: hidden;
	margin: 0;
}
.aui-col-xs-6 {
	width: 45%;
	padding: 0 2.5%;
	position: relative;
	float: left;
}
.aui-content{
	font-size: 0.65rem;
}
.index_goods{
	width:100%;
	height:10rem;
}
.good_item{
	font-size: 0.8rem;
	font-weight: 700;
	color: black;
	margin-top: 8px;
	text-align: center;
}
.good_item::after{
	font-size: 1rem;
	margin-left: 5px;
	margin-top: 4px;
	display: inline-block;
	content: "\f104";
}