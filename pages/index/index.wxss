.scroll-list {
    overflow: hidden;
}

.weui-icon-search, 
.weui-search-bar__text {
    vertical-align: inherit;
}

.topbar {
    background: #fff;
}

.topbar-item {
    color: #333;
    text-align: center;
    padding: 10px 0;
}

.topbar-item.active {
    color: #479de6;
}

.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}
.category {
    padding: 15px 0 10px 0;
    overflow: auto;
    background-color: #FFF;
}
.category_item {
    width: 33.3%;
    float: left;
    margin-bottom: 10px;
}
.icon_wrap {
    width: 40px;
    margin: 0 auto;
    margin-bottom: 5px;
    text-align: center;
}
.index_icon {
    width: 0.85rem;
    height: 0.85rem;
}
.category_item_text {
    text-align: center;
    font-size: 13px;
    color: #737373;
}
/*首页图片样式*/
.aui-row {
    overflow: hidden;
    margin: 0;
}
.aui-col-xs-6 {
    width: 45%;
    padding: 0 2.5%;
    position: relative;
    float: left;
}
.aui-content{
    font-size: 0.65rem;
}
.index_goods{
    width:100%;
    height:10rem;
}
.good_item{
    font-size: 0.8rem;
    font-weight: 700;
    color: black;
    margin-top: 8px;
    text-align: center;
}
.good_item::after{
    font-size: 1rem;
    margin-left: 5px;
    margin-top: 4px;
    display: inline-block;
    content: "\f104";
}